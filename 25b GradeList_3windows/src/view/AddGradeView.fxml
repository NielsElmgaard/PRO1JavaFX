<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="205.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AddGradeViewController">
   <children>
      <HBox prefHeight="28.0" prefWidth="600.0">
         <children>
            <Label text="Add a grade">
               <font>
                  <Font size="25.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="32.0" prefWidth="600.0">
         <children>
            <Label text="Course">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <padding>
                  <Insets right="5.0" />
               </padding>
            </Label>
            <TextField fx:id="courseTextField" prefHeight="25.0" prefWidth="71.0" />
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="32.0" prefWidth="451.0">
         <children>
            <Label text="Grade">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <padding>
                  <Insets right="5.0" />
               </padding>
            </Label>
            <TextField fx:id="gradeTextField" prefHeight="25.0" prefWidth="71.0" translateX="5.33" />
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </HBox>
      <HBox prefHeight="25.0" prefWidth="147.0">
         <children>
            <Button mnemonicParsing="false" onAction="#addGradeSubmitButton" text="Submit">
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#addGradeCancelButton" text="Cancel">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="15.0" prefWidth="205.0">
         <children>
            <Label fx:id="errorLabel" text="Error label" textFill="RED" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
